<UserControl x:Class="Lab_6_7.View.SearchControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:Lab_6_7.CaffeDbContext"
             mc:Ignorable="d" 
             x:Name="root"
             d:DesignHeight="450" d:DesignWidth="800" >
    <Grid>
        <Label Content="Поиск" HorizontalAlignment="Left" Margin="317,59,0,0" VerticalAlignment="Top" Width="64" FontFamily="Arial" FontSize="18" Height="30"/>
        <TextBox x:Name="searchTB" Text="{Binding ElementName=root, Path=SearchText}"   HorizontalAlignment="Left" Height="30" Margin="381,59,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="398" 
                  FontFamily="Arial" FontSize="18" TextChanged="SearchParam_TextChanged"></TextBox>


        <Button Content="Поиск" HorizontalAlignment="Left" Margin="796,59,0,0" VerticalAlignment="Top" Width="134" Height="30" Foreground="White" FontFamily="Arial" FontSize="13"/>
    </Grid>
</UserControl>
