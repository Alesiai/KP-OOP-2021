<Window x:Class="Lab_6_7.View.ConfirmActionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab_6_7.View"
        mc:Ignorable="d"
        Title="Подтвердите действие" Height="180" Width="398" ResizeMode="NoResize" WindowStartupLocation="CenterScreen"  Icon="Image2.png">
    <Grid>
        <TextBlock Grid.Column="0" Text="Вы уверены?" HorizontalAlignment="Left"  VerticalAlignment="Center" Height="39" Width="187" FontFamily="Arial" FontSize="30" Margin="95,23,0,89" />

        <Button x:Name="DelateButton" Content="Да" HorizontalAlignment="Left" Margin="30,73,0,0" VerticalAlignment="Top" Width="120" Height="36" FontFamily="Arial" FontSize="18"  Foreground="White" 
           Click="YesButton_Click"/>
        <Button x:Name="SaveButton" Content="Нет" HorizontalAlignment="Left" Margin="220,73,0,0" VerticalAlignment="Top" Width="120" Height="36" FontFamily="Arial" FontSize="18"  Foreground="White" 
            Click="NoButton_Click"/>

    </Grid>
</Window>
